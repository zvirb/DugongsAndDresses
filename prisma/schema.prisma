generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl-openssl-3.0.x"]
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaign {
  id          String      @id @default(uuid())
  name        String
  active      Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @default(now()) @updatedAt
  
  characters  Character[]
  logs        LogEntry[]
  encounters  Encounter[]
}

model Character {
  id          String   @id @default(uuid())
  name        String
  type        String   @default("PLAYER") // "PLAYER" or "NPC"
  race        String?
  class       String?
  level       Int      @default(1)
  imageUrl    String?  // URL to avatar image
  
  // Stats
  hp          Int
  maxHp       Int
  armorClass  Int
  speed       Int      @default(30)
  initiative  Int      @default(0) // Static bonus bonus (e.g. +2)
  
  // Attributes (JSON for flexibility: { str: 10, dex: 12, ... })
  attributes  String   @default("{}") 
  
  // Inventory (JSON array of item strings)
  inventory   String   @default("[]")

  // Status
  conditions  String   @default("[]") // JSON array of strings
  
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  // Session State
  activeTurn      Boolean @default(false)
  initiativeRoll  Int     @default(0) // The actual roll for the current combat

  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  // Sync Logic
  sourceId    String?
  source      Character?  @relation("CharacterSource", fields: [sourceId], references: [id], onDelete: SetNull)
  clones      Character[] @relation("CharacterSource")

  @@index([campaignId])
  @@index([sourceId])
}

model LogEntry {
  id          String   @id @default(uuid())
  content     String
  type        String   @default("Story") // "Combat", "Story", "Roll", "PlayerAction"
  timestamp   DateTime @default(now())
  
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@index([campaignId])
}

model Encounter {
  id          String   @id @default(uuid())
  name        String
  status      String   @default("Planned") // "Active", "Planned", "Completed"
  
  // Store who is in the encounter and their current init roll as JSON
  // e.g. [{ characterId: "...", initiative: 15, currentHp: 20 }]
  participants String  @default("[]") 
  
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@index([campaignId])
}

model Settings {
  id             String  @id @default(uuid())
  ollamaModel    String  @default("llama3") 
  enableStoryGen Boolean @default(false)
  autoBackup     Boolean @default(true)
  backupCount    Int     @default(10)
}
